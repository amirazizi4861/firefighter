{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["es2020", "DOM"],
    "target": "es2020",
    "importsNotUsedAsValues": "error",
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "types": ["jest"],
    "sourceMap": true,
    "outDir": "./lib"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/tests/*"]
}
